generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Item {
  id   Int    @id @default(autoincrement())
  name String
}

model customers {
  id       Int        @id @default(autoincrement())
  name     String
  invoices invoices[]
}

model invoices {
  id          Int       @id @default(autoincrement())
  amount      Float
  customer_id Int
  customers   customers @relation(fields: [customer_id], references: [id], map: "Invoices_customer_id_fkey")

  @@index([customer_id], map: "Invoices_customer_id_fkey")
}

model user {
  id       Int    @id @default(autoincrement())
  name     String
  email    String
  password String
}
